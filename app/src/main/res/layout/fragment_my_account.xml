<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/myAccTextView1"
            android:layout_width="323dp"
            android:layout_height="72dp"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:ems="10"
            android:text="Witaj "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/myAccTextView2"
            android:layout_width="287dp"
            android:layout_height="72dp"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:ems="10"
            android:text="Wybierz, co chcesz zrobić"
            android:textSize="24sp" />


        <Button
            android:id="@+id/registerMyAccount"
            android:layout_width="301dp"
            android:layout_height="76dp"
            android:text="Zarejestruj się" />

        <Button
            android:id="@+id/givenRatesButton"
            android:layout_width="301dp"
            android:layout_height="76dp"
            android:text="wystawione oceny" />

        <Button
            android:id="@+id/updatePhone"
            android:layout_width="301dp"
            android:layout_height="76dp"
            android:text="Dodaj/zmień numer telefonu" />

        <Button
            android:id="@+id/updateEmail"
            android:layout_width="301dp"
            android:layout_height="76dp"
            android:text="Zmień adres email" />

        <Button
            android:id="@+id/changePassword"
            android:layout_width="301dp"
            android:layout_height="76dp"
            android:text="Zmień hasło" />

        <Button
            android:id="@+id/deleteAccount"
            android:layout_width="301dp"
            android:layout_height="76dp"
            android:text="Usuń konto" />


    </LinearLayout>
</LinearLayout>

