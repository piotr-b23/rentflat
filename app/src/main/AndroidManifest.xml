<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rentflat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.message.SendMessage"></activity>
        <activity android:name=".ui.message.SelectedMessageDetails" />
        <activity android:name=".ui.myAccount.DeleteAccount" />
        <activity android:name=".ui.rate.ReportRate" />
        <activity android:name=".ui.rate.EditRate" />
        <activity android:name=".ui.rate.GetGivenRates" />
        <activity android:name=".ui.rate.RateResults" />
        <activity android:name=".ui.searchForFlat.ReportFlat" />
        <activity android:name=".ui.rate.RateUser" />
        <activity
            android:name=".ui.searchForFlat.SpecificFlatDetails"
            android:label="@string/title_activity_find_flat_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.searchForFlat.SearchForFlatResults" />
        <activity android:name=".ui.myFlats.ChangeFlatDescription" />
        <activity android:name=".ui.myFlats.ChangeFlatPrice" />
        <activity
            android:name=".ui.myFlats.SelectedMyFlatDetails"
            android:label="@string/title_activity_my_flat_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.searchForFlat.SearchForFlat"
            android:label="@string/title_activity_find_flat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.myFlats.AddFlat"
            android:label="@string/title_activity_add_flat"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.myAccount.ChangePhone" />
        <activity android:name=".ui.myAccount.ChangePassword" />
        <activity android:name=".ui.myAccount.ChangeEmail" />
        <activity android:name=".ui.session.Login" />
        <activity android:name=".ui.session.Register" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>